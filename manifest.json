{
  "manifest_version": 3,
  "name": "AI Tab Assistant",
  "version": "1.0",
  "description": "AI-powered browser assistant with chat interface for current tab analysis",
  "permissions": [
    "scripting", 
    "activeTab", 
    "storage", 
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
    
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"]
}